@page "/Admin"
@rendermode InteractiveServer
@inject MyCustomAuthStateProvider MyAuthProvider
@inject NavigationManager MyNavMgr

<h3>Adminbereich</h3>

@if (!isAuthorized)
{
    <p>Du wirst weitergeleitet...</p>
}
else
{
    <div class="admin-menu">
        <p>
            QR-Codes erzeugen

        </p>
            
        <p>
            Diplomarbeiten importieren (Excel)
        </p>
            

        <p>
            Auswertung exportieren (Excel)
        </p>
            

        <button class="admin-btn logout" @onclick="Logout">
            Logout
        </button>

    </div>
}

@code {
    private bool isAuthorized = true;

    protected override async Task OnInitializedAsync()
    {

    }

    private async Task Logout()
    {
        MyNavMgr.NavigateTo("/AdminLogin", true);
    }
}
